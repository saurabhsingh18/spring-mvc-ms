{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"bookId": {
			"type": "string"
		},
		"title": {
			"type": "string",
			"minLength": 1
		},
		"author": {
			"type": "string",
			"minLength": 1
		},
		"price": {
			"type": "integer",
			"minimum": 1,
			"maximum": 9999
		},
		"status": {
			"type": "string",
			"minLength": 1
		},
		"type": {
			"type": "string",
			"minLength": 1
		},
		"language": {
			"type": "string",
			"minLength": 1
		},
		"tags": {
			"type": "string",
			"minLength": 1
		}
	},
	"required": [
		"title",
		"author",
		"price",
		"type",
		"language"
	]
}
